<UserControl x:Class="Waker.TimeSpanPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Waker"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="120">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="2">
            <TextBox x:Name="HourTextBox" MinWidth="25"></TextBox>
            <Label Content=":"></Label>
            <TextBox x:Name="MinuteTextBox" MinWidth="25"></TextBox>
            <Label Content=":"></Label>
            <TextBox x:Name="SecondTextBox" MinWidth="25"></TextBox>
        </StackPanel>
    </Grid>
</UserControl>
