<Window x:Class="Waker.JobPropertyPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Waker"
        mc:Ignorable="d"
        Title="定时设定" Height="150" Width="200" Topmost="True" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBox MinWidth="100" Text="{Binding Time}"></TextBox>
            <Button x:Name="OkBtn" Grid.Row="1" Content="确定" Margin="2" HorizontalAlignment="Center" Click="OkBtn_Click"/>
        </Grid>
    </Grid>
</Window>
